@model ProjectSample.Areas.Catalog.Models.Home.IndexModel
    
<h2>Catalog</h2>


<div class="row" id="lister">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.DisplayFor(x => x.Products)
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @foreach (var i in Enumerable.Range(1, Model.TotalItems/30))
        {
            <a href="@Url.Action("Index", new {page = 1})" class="btn btn-default">@i</a>
        }
    </div>
</div>