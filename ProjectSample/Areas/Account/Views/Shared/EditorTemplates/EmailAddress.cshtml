@model String

<div class="form-group">
    @Html.LabelForModel(new {@class = "col-sm-4 col-md-4 col-lg-4 control-label"})
    <div class="col-sm-8 col-md-8 col-lg-8">
        @Html.TextBoxFor(x => x, new { @class = "form-control" })
    </div>
    <div class="col-sm-8 col-md-8 col-lg-8 col-lg-offset-4 col-md-offset-4 col-sm-offset-4">
        @Html.ValidationMessageFor(x => x)
    </div>
</div>
