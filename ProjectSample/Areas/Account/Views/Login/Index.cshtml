@model ProjectSample.Areas.Account.Models.Login.LoginFields
    
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Index", "Login", new {area = "Account"}, FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-offset-4 col-md-offset-4 col-lg-offset-4 col-sm-8 col-md-8 col-lg-8">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
}

