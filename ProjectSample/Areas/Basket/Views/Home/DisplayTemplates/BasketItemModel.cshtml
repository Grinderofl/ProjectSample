@model ProjectSample.Areas.Basket.Models.BasketItemModel


<tr>
    <td>
        @Model.ProductName
    </td>
    <td>
        @Model.Quantity
    </td>
    <td>
        @using (Html.BeginForm("Remove", "Update", FormMethod.Post, new {@class = "form form-horizontal"}))
        {
            @Html.HiddenFor(x => x.ProductId)
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you wish to remove this product from your basket?');"><span class="glyphicon glyphicon-trash"></span></button>
        }
    </td>
</tr>